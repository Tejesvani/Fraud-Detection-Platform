{
  "name": "alerts-prod-sink",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": "1",
    "topics": "alerts",
    "connection.url": "jdbc:postgresql://postgres-prod:5432/${env:POSTGRES_PROD_DB}",
    "connection.user": "${env:POSTGRES_PROD_USER}",
    "connection.password": "${env:POSTGRES_PROD_PASSWORD}",
    "insert.mode": "insert",
    "pk.mode": "none",
    "table.name.format": "alerts_prod",
    "auto.create": "false",
    "auto.evolve": "false",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "io.confluent.connect.avro.AvroConverter",
    "value.converter.schema.registry.url": "http://schema-registry:8081"
  }
}
